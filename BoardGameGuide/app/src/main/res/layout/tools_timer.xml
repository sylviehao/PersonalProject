        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:text="120"
            android:textColor="@color/lightGreen"
            android:textSize="56sp"
            app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar"
            app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
            app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
            app:layout_constraintTop_toTopOf="@+id/circularProgressBar" />

        <ImageView
            android:id="@+id/button_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            app:layout_constraintBottom_toTopOf="@+id/button_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/round_time_1" />

        <ImageView
            android:id="@+id/button_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/button_3"
            app:layout_constraintEnd_toEndOf="@+id/button_1"
            app:layout_constraintStart_toStartOf="@+id/button_1"
            app:layout_constraintTop_toBottomOf="@+id/button_1"
            app:srcCompat="@drawable/round_time_2" />

        <ImageView
            android:id="@+id/button_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/button_custom"
            app:layout_constraintEnd_toEndOf="@+id/button_2"
            app:layout_constraintStart_toStartOf="@+id/button_2"
            app:layout_constraintTop_toBottomOf="@+id/button_2"
            app:srcCompat="@drawable/round_time_3" />

        <ImageView
            android:id="@+id/button_custom"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button_3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/button_3"
            app:layout_constraintTop_toBottomOf="@+id/button_3"
            app:srcCompat="@drawable/round_time_custom" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:text="30"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_1"
            app:layout_constraintEnd_toEndOf="@+id/button_1"
            app:layout_constraintStart_toStartOf="@+id/button_1"
            app:layout_constraintTop_toTopOf="@+id/button_1" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:text="60"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_2"
            app:layout_constraintEnd_toEndOf="@+id/button_2"
            app:layout_constraintStart_toStartOf="@+id/button_2"
            app:layout_constraintTop_toTopOf="@+id/button_2" />

        <TextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:text="90"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_3"
            app:layout_constraintEnd_toEndOf="@+id/button_3"
            app:layout_constraintStart_toStartOf="@+id/button_3"
            app:layout_constraintTop_toTopOf="@+id/button_3" />

        <ImageView
            android:id="@+id/text_custom"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_custom"
            app:layout_constraintEnd_toEndOf="@+id/button_custom"
            app:layout_constraintStart_toStartOf="@+id/button_custom"
            app:layout_constraintTop_toTopOf="@+id/button_custom"
            app:srcCompat="@drawable/ic_pen" />

    </androidx.constraintlayout.widget.ConstraintLayout>
