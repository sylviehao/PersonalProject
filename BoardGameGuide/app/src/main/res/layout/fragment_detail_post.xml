<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.sylvie.boardgameguide.detailPost.DetailPostViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_detail_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rosyOrange">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="@+id/constraint_detail_post"
                app:layout_constraintStart_toStartOf="@+id/constraint_detail_post"
                app:layout_constraintTop_toTopOf="@+id/constraint_detail_post">

                <TextView
                    android:id="@+id/text_host_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@{viewModel.getEventData.hostId}"
                    android:textColor="@color/darkBrown"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="sylviehao" />


                <TextView
                    android:id="@+id/text_game_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/finger_paint"
                    android:text="@{viewModel.getEventData.topic}"
                    android:textColor="@color/darkBrown"
                    android:textSize="22sp"
                    app:layout_constraintStart_toStartOf="@+id/text_host_name"
                    app:layout_constraintTop_toBottomOf="@+id/text_host_name"
                    tools:text="不服來戰" />


                <TextView
                    android:id="@+id/text_game_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{String.valueOf(viewModel.getEventData.time)}"
                    android:textColor="@color/darkBrown"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/text_game_topic"
                    app:layout_constraintTop_toBottomOf="@+id/text_game_topic"
                    tools:text="20201231" />


                <TextView
                    android:id="@+id/text_game_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@{viewModel.getEventData.location}"
                    android:textColor="@color/darkBrown"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/text_game_time"
                    app:layout_constraintTop_toBottomOf="@+id/text_game_time"
                    tools:text="AppWorks School" />


                <ImageView
                    android:id="@+id/ic_baby"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_total_player"
                    app:layout_constraintEnd_toStartOf="@+id/text_total_player"
                    app:layout_constraintTop_toTopOf="@+id/text_total_player"
                    app:srcCompat="@drawable/ic_player" />

                <ImageView
                    android:id="@+id/ic_like"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_total_like"
                    app:layout_constraintEnd_toStartOf="@+id/text_total_like"
                    app:layout_constraintTop_toTopOf="@+id/text_total_like"
                    app:srcCompat="@drawable/ic_good_circle" />

                <TextView
                    android:id="@+id/text_total_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@{String.valueOf(viewModel.getEventData.playerList.size())}"
                    android:textColor="@color/darkBrown"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_total_like"
                    app:layout_constraintEnd_toStartOf="@+id/ic_like"
                    app:layout_constraintTop_toTopOf="@+id/text_total_like"
                    tools:text="12" />


                <TextView
                    android:id="@+id/text_total_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@{String.valueOf(viewModel.getEventData.like.size())}"
                    android:textColor="@color/darkBrown"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="23" />


                <ImageView
                    android:id="@+id/icon_mr_krabs"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="@+id/text_game_location"
                    app:layout_constraintTop_toBottomOf="@+id/text_game_location"
                    app:srcCompat="@drawable/ic_mr_krabs" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_mr_krabs"
                    app:layout_constraintEnd_toStartOf="@+id/icon_patrick_star"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/icon_mr_krabs"
                    app:layout_constraintTop_toTopOf="@+id/icon_mr_krabs"
                    app:layout_constraintVertical_bias="1.0">

                    <TextView
                        android:id="@+id/text_game_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/finger_paint"
                        android:text="@string/game_info"
                        android:textColor="@color/darkBrown"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.436"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/button_down"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/ic_down_button"
                        app:layout_constraintBottom_toBottomOf="@+id/text_game_info"
                        app:layout_constraintStart_toEndOf="@+id/text_game_info"
                        app:layout_constraintTop_toTopOf="@+id/text_game_info" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/icon_patrick_star"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_mr_krabs"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/icon_mr_krabs"
                    app:srcCompat="@drawable/ic_patrick_star" />

                <TextView
                    android:id="@+id/line_1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/darkBrown"
                    app:layout_constraintEnd_toEndOf="@+id/icon_patrick_star"
                    app:layout_constraintStart_toStartOf="@+id/icon_mr_krabs"
                    app:layout_constraintTop_toBottomOf="@+id/icon_mr_krabs" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_game_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/text_total_like"
                    app:layout_constraintStart_toStartOf="@+id/icon_mr_krabs"
                    app:layout_constraintTop_toBottomOf="@+id/line_1">

                    <TextView
                        android:id="@+id/text_game_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.getGameData.name}"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="狼人殺" />


                    <TextView
                        android:id="@+id/text_game_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{String.valueOf(viewModel.getGameData.type)}"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/text_game_name"
                        app:layout_constraintTop_toBottomOf="@+id/text_game_name"
                        tools:text="陣營" />

                    <TextView
                        android:id="@+id/text_game_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{viewModel.getGameData.rules}"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/text_game_type"
                        app:layout_constraintTop_toBottomOf="@+id/text_game_type"
                        tools:text="規則" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_player"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/constraint_game_info"
                    app:layout_constraintStart_toStartOf="@+id/constraint_game_info"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_game_info" />

                <ImageView
                    android:id="@+id/icon_jake"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_player"
                    app:srcCompat="@drawable/ic_jake" />

                <TextView
                    android:id="@+id/text_event_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/finger_paint"
                    android:text="@string/event_area"
                    android:textColor="@color/darkBrown"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_jake"
                    app:layout_constraintEnd_toStartOf="@+id/icon_finn"
                    app:layout_constraintStart_toEndOf="@+id/icon_jake"
                    app:layout_constraintTop_toTopOf="@+id/icon_jake" />

                <ImageView
                    android:id="@+id/icon_finn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_jake"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/icon_jake"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_finn" />

                <TextView
                    android:id="@+id/line_2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/darkBrown"
                    app:layout_constraintEnd_toEndOf="@+id/icon_finn"
                    app:layout_constraintStart_toStartOf="@+id/icon_jake"
                    app:layout_constraintTop_toBottomOf="@+id/icon_jake" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/line_2"
                    app:layout_constraintStart_toStartOf="@+id/icon_jake"
                    app:layout_constraintTop_toBottomOf="@+id/line_2" />

                <TextView
                    android:id="@+id/button_add_photo"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/frame_edit_new_post"
                    app:layout_constraintEnd_toEndOf="@+id/line_2"
                    app:layout_constraintStart_toStartOf="@+id/line_2"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_photo" />

                <ImageView
                    android:id="@+id/icon_add_photo"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:layout_constraintBottom_toBottomOf="@+id/button_add_photo"
                    app:layout_constraintEnd_toEndOf="@+id/button_add_photo"
                    app:layout_constraintStart_toStartOf="@+id/button_add_photo"
                    app:layout_constraintTop_toTopOf="@+id/button_add_photo"
                    app:srcCompat="@drawable/ic_add" />

                <ImageView
                    android:id="@+id/icon_bart"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@+id/recycler_photo"
                    app:layout_constraintTop_toBottomOf="@+id/button_add_photo"
                    app:srcCompat="@drawable/ic_bart" />

                <TextView
                    android:id="@+id/text_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/finger_paint"
                    android:text="@string/post_comment"
                    android:textColor="@color/darkBrown"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_bart"
                    app:layout_constraintEnd_toStartOf="@+id/icon_lisa"
                    app:layout_constraintStart_toEndOf="@+id/icon_bart"
                    app:layout_constraintTop_toTopOf="@+id/icon_bart" />

                <ImageView
                    android:id="@+id/icon_lisa"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/icon_bart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/icon_bart"
                    app:srcCompat="@drawable/ic_lisa" />

                <TextView
                    android:id="@+id/line_3"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/darkBrown"
                    app:layout_constraintEnd_toEndOf="@+id/icon_lisa"
                    app:layout_constraintStart_toStartOf="@+id/icon_bart"
                    app:layout_constraintTop_toBottomOf="@+id/icon_bart" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_comment"
                    android:layout_width="0dp"
                    android:layout_height="203dp"
                    android:layout_marginTop="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/icon_lisa"
                    app:layout_constraintStart_toStartOf="@+id/icon_bart"
                    app:layout_constraintTop_toBottomOf="@+id/line_3" />

                <EditText
                    android:id="@+id/edit_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/frame_edit_new_post"
                    android:ems="10"
                    android:fontFamily="@font/finger_paint"
                    android:gravity="center"
                    android:hint="@string/edit_comment"
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/gray_888888"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@+id/recycler_comment"
                    app:layout_constraintStart_toStartOf="@+id/recycler_comment"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_comment" />

                <Button
                    android:id="@+id/button_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/frame_edit_new_post"
                    android:backgroundTint="@color/darkBrown"
                    android:fontFamily="@font/finger_paint"
                    android:text="@string/send"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/edit_comment"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/edit_comment"
                    app:layout_constraintTop_toBottomOf="@+id/edit_comment" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>