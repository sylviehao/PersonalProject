<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="event"
            type="com.sylvie.boardgameguide.data.Event" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/noto_sans"
            android:text="sylviehao"
            android:textColor="@color/darkBrown"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_game_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/finger_paint"
            android:text="識破你的識破"
            android:textColor="@color/darkBrown"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/image_game_picture"
            app:layout_constraintStart_toStartOf="@+id/text_host_name"
            app:layout_constraintTop_toBottomOf="@+id/text_host_name" />

        <ImageView
            android:id="@+id/image_game_picture"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_game_topic"
            app:layout_constraintTop_toBottomOf="@+id/text_game_location"
            app:srcCompat="@drawable/pic_white_wall" />

        <TextView
            android:id="@+id/line_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/lightBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/image_game_picture"
            app:layout_constraintStart_toStartOf="@+id/image_game_picture"
            app:layout_constraintTop_toBottomOf="@+id/image_game_picture" />

        <TextView
            android:id="@+id/text_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/noto_sans"
            android:text="遊戲: 矮人金礦"
            android:textColor="@color/darkBrown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_game_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="時間: 11/28"
            android:textColor="@color/darkBrown"
            app:layout_constraintEnd_toEndOf="@+id/text_game_name"
            app:layout_constraintTop_toBottomOf="@+id/text_game_name" />

        <TextView
            android:id="@+id/text_game_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/noto_sans"
            android:text="地點: AppWoks School"
            android:textColor="@color/darkBrown"
            app:layout_constraintEnd_toEndOf="@+id/text_game_time"
            app:layout_constraintTop_toBottomOf="@+id/text_game_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>